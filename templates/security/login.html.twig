{% extends 'base.html.twig' %}

{% block title %}Войти{% endblock %}

{% block body %}
<div class="content-center">
    <form class="login__form" method="post" action="/api/login">
        <h1 class="h3 mb-3 font-weight-normal">Войти</h1>
        <div class="login__form-field-container email_container">
            <input
                type="email"
                name="email"
                id="inputEmail"
                class="form-control"
                autocomplete="email"
                required
                autofocus
            />
        </div>
        <div class="login__form-field-container password_container">
            <input
                type="password"
                name="password"
                id="inputPassword"
                class="form-control"
                autocomplete="current-password"
                required
            />
        </div>
        <button class="btn btn-lg btn-primary" type="submit">Войти</button>
        <div class="auth_form-extra">
            <div>Еще нет аккаунта?</div>
            <a href="/register">Зарегистрируйтесь</a>
        </div>
    </form>
</div>

{% endblock %}
