<div class="header">
    <div class="header__container">
        <div class="header__search-and-icon">
            <a href="/login" class="header-logo">
                <img src="https://www.freeiconspng.com/uploads/wolf-emblem-icon-31.png" />
            </a>
            <div class="header__search-field">
                <input class="header__search-input" type="text" />
                <div class="header__search-controls">
                    <select class="header__search-select">
                        <option value="products">Товары</option>
                        <option value="shops">Магазины</option>
                        <option value="users">Пользователи</option>
                    </select>
                    <button type="button" class="btn btn-info">Find</button>
                </div>
            </div>
        </div>
        <div>
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('app_login') }}" class="header__container-login-btn">Login</a>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('app_logout') }}" class="header__container-logout-btn">Exit</a>
            {% endif %}
        </div>
        <div>{{ app.user.firstName}}</div>
    </div>
</div>