{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/authorization.css') }}">
{% endblock %}

{% form_theme registrationForm 'inc/form/auth-form.html.twig' %}

{% block body %}
    <div class="registration-form">
        <h1 class="h3 mb-3 font-weight-normal form-header">Регистрация</h1>
        {{ form(registrationForm ) }}
        <div class="auth_form-extra">
            <div>Уже зарегистрированы?</div>
            <a href="/login">Войдите</a>
        </div>
    <div class="content-center">
{% endblock %}