{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/shops.css') }}">
{% endblock %}

{% block title %}Магазины{% endblock %}

{% block body %}
    <h1 class="shops-title">Магазины</h1>
    <div class="shops-container">
        {% for shop in paginator.shops %}
            <a href={{ path('shop', {'shopId': shop.id}) }} class="shop">
                <div class="shop__image">
                    <img src={{ shop.shopImageUrl ?? 'https://files.sitepokupok.ru/stock/139866-dc9c6560.jpg' }} />
                </div>
                <div class="shop__owner-content">
                    <div class="shop__owner-content__avatar">
                        <img src={{ null ?? 'https://files.sitepokupok.ru/user/859.jpg'}} />
                    </div>
                    <div class="shop__owner-content__login">{{ shop.user.firstName }}</div>
                </div>
                <div class="shop__content-info">
                    <div class="shop__content-info-title">{{ shop.name }}</div>
                    <div class="shop__content-info-description">{{ shop.description }}</div>
                </div>
            </a>
        {% endfor %}
        {% if paginator.getShopCount() == 0 %}
            Empty shop..(
        {% endif %}
    </div>
    <div class="pagination">

        {% if paginator is defined %}
            {% if paginator.currentPageNumber != 1%}
                <a href="{{ path('shops', { page: paginator.currentPageNumber - 1 }) }}" class="pagination__btn pagination__btn-arrow">
                    <span class="material-icons">chevron_left</span>
                </a>
            {% endif %}

            {% set lastPage = 1 %}
            {% for page in paginator.pages %}
                {% if page - lastPage > 1  %}
                    <li class="pagination__dots">...</li>
                {% endif %}
                <a href="{{ path('shops', { page: page }) }}" class="pagination__numbers {% if paginator.currentPageNumber == page %}active{% endif %}">
                    {{ page }}
                </a>
                {% set lastPage = page %}
            {% endfor %}

            {% if paginator.maxPages != paginator.currentPageNumber %}
                <a href="{{ path('shops', { page: paginator.currentPageNumber + 1 }) }}" class="pagination__btn pagination__btn-arrow">
                    <span class="material-icons">chevron_right</span>
                </a>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
