{% extends 'base.html.twig' %}

{% block title %}Создать магазин{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/create_shop.css') }}">
{% endblock %}

{% block body %}
    <div class="create_shop_form">
        <h1 class="h3 mb-3 font-weight-normal form-header">Создать магазин</h1>
        <div class="form-group email_container">
            <label class="form-field-label" for="shop_title">Название</label>
            <input
                    type="text"
                    name="title"
                    id="shop_title"
                    class="form-control"
                    required
                    autofocus
            />
        </div>
        <div class="form-group email_container">
            <label class="form-field-label" for="shop_description">Описание</label>
            <textarea class="form-control description_control" id="shop_description" rows="3"></textarea>
        </div>
        <div class="mb-4">
            <div class="h5 mb-2">Прикрепить фото магазина:</div>
            <input type="file" id="upload_photo"/>
        </div>
        <button type="submit" id="creat_shop_btn" class="btn-primary btn">Создать</button>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/create_shop.js') }}">
{% endblock %}