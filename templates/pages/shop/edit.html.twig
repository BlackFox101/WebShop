{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/editShop.css') }}">
{% endblock %}

{% block title %}Редактировать магазин {{ shop.name }}{% endblock %}

{#{% form_theme shopForm 'inc/form/auth-form.html.twig' %}#}

{% block body %}
    <div class="edit-form">
        <h1 class="h3 mb-3 font-weight-normal edit-text">Редактировать магазин</h1>

        <form class="login_form" method="post">
        <div class="form-group email_container">
            {{ shop.name }}
            <label class="form-field-label" for="inputEmail">Название</label>
            <input
                    type="text"
                    name="shopName"
                    id="shopName"
                    class="form-control"
                    value={{ shop.name }}
            />
        </div>
        <div class="form-group password_container">
            <label class="form-field-label" for="inputPassword">Описание</label>
            <textarea>{{ shop.description }}</textarea>
        </div>
    </div>
{% endblock %}